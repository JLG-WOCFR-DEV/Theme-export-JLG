{
  "name": "theme-export-jlg",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test:js": "jest --runInBand",
    "test:php": "composer install --no-interaction --no-progress && vendor/bin/phpunit",
    "test:e2e": "playwright test",
    "test": "npm run test:js && npm run test:php && npm run test:e2e"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@wordpress/e2e-test-utils-playwright": "^1.31.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^22.1.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "<rootDir>/tests/js/**/*.test.js"
    ]
  }
}
